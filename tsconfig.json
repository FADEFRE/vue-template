{
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"downlevelIteration": true,
		"importHelpers": true,
		"lib": ["dom", "dom.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"types": ["node", "vite/client", "jsdom"],
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo"
	},
	"exclude": ["e2e/**"],
	"include": [
		"src/**/*",
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/__tests__/*",
		"vite.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		"env.d.ts"
	]
}
